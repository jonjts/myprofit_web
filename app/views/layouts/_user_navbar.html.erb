<%= nav_bar :fixed => :top, :brand => "MyProfit", :responsive => true do %>
  <%= menu_group do %>
    <%= menu_item fa_icon("credit-card", text: t("links.bills")), bills_path %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <%= drop_down fa_icon("globe") do %>
      <%= menu_item fa_icon("flag", text: t("infos.portuges")), set_pt_language_index_path, method: :post %>
      <%= menu_item fa_icon("flag", text: t("infos.ingles")), set_en_language_index_path, method: :post %>
    <% end %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <%= drop_down  fa_icon("user-circle-o", text: current_user.name) do %>
      <li class="dropdown-header"><%= image_tag(current_user.image, size: "30", class: "img-perfil")%>
        <%= current_user.email %></li>
      <%= drop_down_divider %>
      <%= menu_item "Logout", destroy_user_session_path, method: :delete, "data-confirm": t('messages.sair') %>
    <% end %>
  <% end %>
<% end %>